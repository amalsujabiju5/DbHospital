        xmlns:local="clr-namespace:Hospital_App"
        mc:Ignorable="d"
        Title="AssignTreatment" Height="172" Width="369">
    <Grid Margin="0,0,0,-6" Background="#FFE4E3E3">
        <Label Content="Assign Treatment" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtTeatment" HorizontalAlignment="Left" Margin="126,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.059,0.681" Click="btnSubmit_Click"/>
